@model IEnumerable<Club>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var items in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@items.Image" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@items.Title</p>
                            <p class="card-text">@items.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Detail" asp-route-id="@items.Id">Details</a>
                                    
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Edit" asp-route-id="@items.Id">Edit</a>
                                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Delete" asp-route-id="@items.Id">Delete</a>
                                        @* <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> *@
                                    }
                                   
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>